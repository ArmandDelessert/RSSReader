<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layoutMargin">

    <!-- Titre du flux RSS -->
    <TextView
        android:id="@+id/feedListAdapter_title_TextView"
        android:text="@string/feedListAdapter_title_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginBottom="@dimen/elementSmallMargin"
        android:textSize="@dimen/feedTitleSize"
        android:textStyle="bold"
        android:textColor="@color/colorAccent" />

    <!-- Description du flux RSS -->
    <TextView
        android:id="@+id/feedListAdapter_description_TextView"
        android:text="@string/feedListAdapter_description_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/elementBigMargin"
        android:textSize="@dimen/descriptionSize"
        android:maxLines="2"
        android:ellipsize="end" />

</LinearLayout>
