<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layoutMargin">

    <!-- Titre de l'article -->
    <TextView
        android:id="@+id/articleListAdapter_title_TextView"
        android:text="@string/articleListAdapter_title_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="@dimen/articleTitleSize"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="@dimen/elementSmallMargin" />

    <!-- Description de l'article -->
    <TextView
        android:id="@+id/articleListAdapter_description_TextView"
        android:text="@string/articleListAdapter_description_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/descriptionSize"
        android:maxLines="2"
        android:ellipsize="end" />

</LinearLayout>
