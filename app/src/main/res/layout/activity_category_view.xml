<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_category_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    // Toolbar
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white" />

    // List des flux RSS
    <ListView
        android:id="@+id/categoryView_feeds_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/categoryView_launchParsing_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch parsing!"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/enableAnimationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable animation!"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/disableAnimationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable animation!"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</LinearLayout>
